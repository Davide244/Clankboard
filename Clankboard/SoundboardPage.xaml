<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Clankboard.SoundboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Clankboard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Grid VerticalAlignment="Top">
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Margin="10, 10, 10, 0" Background="{ThemeResource Clankboard_AppCardBackground}" Padding="8" CornerRadius="5" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8D6;" Margin="3, 5.25, 0, 0" FontSize="22"/>
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}" Margin="5, 0, 0, 0">Playback</TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="1" >
                    <NavigationViewItemSeparator/>
                    <TextBlock TextWrapping="WrapWholeWords" Style="{StaticResource BodyTextBlockStyle}" Margin="5, 6">You can change simple playback settings here. You can find more advanced settings on the settings page.</TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 5, 0, 0">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE81E;" Margin="0" FontSize="13"/>
                        <TextBlock Margin="3, 0, 6, 0" Style="{StaticResource BodyStrongTextBlockStyle}" VerticalAlignment="Center">Overlap Sounds</TextBlock>
                        <CheckBox/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 5, 0, 0">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7F5;" Margin="0" FontSize="13"/>
                        <TextBlock Margin="3, 0, 0, 0" Style="{StaticResource BodyStrongTextBlockStyle}" VerticalAlignment="Center">Pause / Play Keybind:</TextBlock>
                        <HyperlinkButton Margin="2, 0">None</HyperlinkButton>
                    </StackPanel>
                    <NavigationViewItemSeparator Margin="0, 10, 0, 5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Button Padding="6">
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF5B0;" Margin="0" FontSize="16"/>
                            </Button>
                            <Button Padding="6" Margin="4, 0, 0, 0">
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF8AE;" Margin="0" FontSize="16"/>
                            </Button>
                        </StackPanel>
                        <HyperlinkButton HorizontalAlignment="Right" Grid.Column="1">Settings Page</HyperlinkButton>
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid Margin="10, 10, 10, 0" Background="{ThemeResource Clankboard_AppCardBackground}" Padding="4" CornerRadius="5" VerticalAlignment="Stretch" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel>
                    <TextBox Margin="2, 2, 2, 5" PlaceholderText="Search Sound" Visibility="Visible"/>
                    <StackPanel Visibility="Visible" x:Name="SoundboardNoItems">
                        <BitmapIcon UriSource="ms-appx:///Assets/NoSoundboardItems.png" ShowAsMonochrome="True" Opacity="0.8" HorizontalAlignment="Center" Width="200"/>
                        <TextBlock Text="Soundboard empty." FontSize="30" FontWeight="Bold" Opacity="0.8" HorizontalAlignment="Center" Margin="0, 0, 0, 5"/>
                    </StackPanel>
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Visible">
                    <ListView x:Name="MainSoundboardListview" SelectionMode="Extended" CanDragItems="True" Margin="-3, 0" CanReorderItems="True" ContainerContentChanging="MainSoundboardListview_ContainerContentChanging">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:SoundBoardItem">
                                <Grid>
                                    <Grid.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Text="Change Name">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE70F;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem Text="Delete" Click="Soundboard_Removeitem_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE74D;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem Text="Play" IsEnabled="{x:Bind BtnEnabled, Mode=TwoWay}">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE768;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Glyph="{x:Bind SoundLocationIcon, Mode=TwoWay}" x:Phase="1" HorizontalAlignment="Left" Foreground="{Binding SoundIconColor, Mode=TwoWay, TargetNullValue={ThemeResource TextFillColorPrimaryBrush}}" ToolTipService.ToolTip="{x:Bind SoundIconTooltip, Mode=TwoWay}" Visibility="{x:Bind SoundIconVisible, Mode=TwoWay}"/>
                                    <ProgressRing IsActive="{x:Bind ProgressRingEnabled, Mode=TwoWay}" x:Phase="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="20" Height="20" IsIndeterminate="{x:Bind ProgressRingIntermediate, Mode=TwoWay}" Value="{x:Bind ProgressRingProgress, Mode=TwoWay}"/>
                                    <StackPanel Margin="20 0, 0, 0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Text="{x:Bind SoundName, Mode=TwoWay}"
                                                x:Phase="1"
                                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                TextWrapping="NoWrap"
                                                Margin="12,6,0,0"/>
                                        </StackPanel>
                                        <TextBlock 
                                            Grid.Row="1"
                                            Text="{x:Bind SoundLocation, Mode=TwoWay}"
                                            x:Phase="1"
                                            Style="{ThemeResource CaptionTextBlockStyle}"
                                            TextWrapping="NoWrap"
                                            Margin="12,0,0,8"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                                        <HyperlinkButton Margin="0, 0, 5, 0" Foreground="{Binding SoundKeybindForecolor, Mode=TwoWay, TargetNullValue={ThemeResource AccentTextFillColorPrimaryBrush}}" x:Phase="1" Content="{x:Bind SoundKeybind, Mode=TwoWay}"/>
                                        <!-- Double Keybind color (No Overlap mode): Foreground="#ff99a4"-->
                                        <Button Foreground="LightGreen" HorizontalAlignment="Right" VerticalAlignment="Center" x:Phase="1" IsEnabled="{x:Bind BtnEnabled, Mode=TwoWay}">
                                            <FontIcon Glyph="&#xF5B0;" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
            <!--StackPanel Grid.Row="2" x:Name="InfobarHolder">
                <InfoBar x:Name="AppMissingDriverInfo" Title="Missing Drivers" Message="You do not have any supported drivers installed!" Severity="Error" IsOpen="False" Margin="10, 10, 10, 0" VerticalAlignment="Bottom"/>
                <InfoBar x:Name="AppSecondaryInfobar" Title="Missing Files" Message="Some files are missing!" Severity="Warning" IsOpen="False" Margin="10, 10, 10, 10" VerticalAlignment="Bottom"/>
            </StackPanel-->
        </Grid>
    </Grid>
</Page>
