    <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="18, 0, 18, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="auto" HorizontalScrollMode="Enabled">
            <StackPanel MaxWidth="1000" HorizontalAlignment="Stretch" Spacing="{StaticResource SettingsCardSpacing}">
            <!--win:StackPanel.ChildrenTransitions>
