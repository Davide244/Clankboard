<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Clankboard.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Clankboard.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="auto" HorizontalScrollMode="Enabled">
            <StackPanel Orientation="Vertical" Grid.Row="1">
                <Grid Margin="10, 10, 10, 0" Background="#303030" Padding="8" CornerRadius="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8D6;" Margin="3, 5.25, 0, 0" FontSize="22"/>
                        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Margin="5, 0, 0, 0">Audio Devices</TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="1" >
                        <NavigationViewItemSeparator/>
                        <TextBlock TextWrapping="WrapWholeWords" Style="{StaticResource BodyTextBlockStyle}" Margin="5, 6">You can change the audio input / output device the application uses here. If your audio device does not pop up, it may not be supported</TextBlock>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 5, 0, 0">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE720;" Margin="0" FontSize="13"/>
                            <TextBlock Margin="3, 0, 0, 0" Style="{StaticResource BodyStrongTextBlockStyle}" VerticalAlignment="Center">Input Device:</TextBlock>
                            <ComboBox Margin="5, 7, 0, 0">
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE720;" Margin="0" FontSize="13"/>
                                        <TextBlock Margin="3, 0, 0, 0">Default Microphone</TextBlock>
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem>Hi</ComboBoxItem>
                                <ComboBoxItem>Hi</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 5, 0, 0">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7F5;" Margin="0" FontSize="13"/>
                            <TextBlock Margin="3, 0, 0, 0" Style="{StaticResource BodyStrongTextBlockStyle}" VerticalAlignment="Center">Output Device:</TextBlock>
                            <ComboBox Margin="5, 7, 0, 0" SelectedIndex="0">
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE767;" Margin="0" FontSize="13"/>
                                        <TextBlock Margin="3, 0, 0, 0">Default Speaker</TextBlock>
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem>Hi</ComboBoxItem>
                                <ComboBoxItem>Hi</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 5, 0, 0">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE964;" Margin="0" FontSize="13"/>
                            <TextBlock Margin="3, 0, 0, 0" Style="{StaticResource BodyStrongTextBlockStyle}" VerticalAlignment="Center">Driver Input</TextBlock>
                            <ComboBox Margin="5, 7, 0, 0">
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE95F;" Margin="0" FontSize="13"/>
                                        <TextBlock Margin="3, 0, 0, 0">VB Audio Cable Input</TextBlock>
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem>Hi</ComboBoxItem>
                                <ComboBoxItem>Hi</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <NavigationViewItemSeparator Margin="0, 10, 0, 5"/>
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Button>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE73E;" Margin="0" FontSize="13"/>
                                    <TextBlock Margin="3, 0, 0, 0">Apply Changes</TextBlock>
                                </StackPanel>
                            </Button>
                            <Button Margin="8, 0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72C;" Margin="0" FontSize="13"/>
                                    <TextBlock Margin="6, 0, 0, 0">Use default devices</TextBlock>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <Grid Margin="10" Background="#303030" Padding="8" CornerRadius="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA37;" Margin="3, 5.25, 0, 0" FontSize="22"/>
                        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Margin="5, 0, 0, 0">Soundboard Options</TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="1" >
                        <NavigationViewItemSeparator/>
                        <TextBlock TextWrapping="WrapWholeWords" Style="{StaticResource BodyTextBlockStyle}" Margin="5, 6">You can customize your Soundboard here.</TextBlock>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 5, 0, 0">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8FD;" Margin="0" FontSize="13"/>
                            <TextBlock Margin="3, 0, 0, 0" Style="{StaticResource BodyStrongTextBlockStyle}" VerticalAlignment="Center">Use compact view</TextBlock>
                            <CheckBox Margin="5, 0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5, 5, 0, 0">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7F5;" Margin="0" FontSize="13"/>
                            <TextBlock Margin="3, 0, 0, 0" Style="{StaticResource BodyStrongTextBlockStyle}" VerticalAlignment="Center">Output Device:</TextBlock>
                            <ComboBox Margin="5, 7, 0, 0">
                                <ComboBoxItem>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7F5;" Margin="0" FontSize="13"/>
                                        <TextBlock Margin="3, 0, 0, 0">Headset LMG5022L Speakers</TextBlock>
                                    </StackPanel>
                                </ComboBoxItem>
                                <ComboBoxItem>Hi</ComboBoxItem>
                                <ComboBoxItem>Hi</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <NavigationViewItemSeparator Margin="0, 10, 0, 5"/>
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Button>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE73E;" Margin="0" FontSize="13"/>
                                    <TextBlock Margin="3, 0, 0, 0">Apply Changes</TextBlock>
                                </StackPanel>
                            </Button>
                            <Button Margin="8, 0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72C;" Margin="0" FontSize="13"/>
                                    <TextBlock Margin="6, 0, 0, 0">Use default options</TextBlock>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
