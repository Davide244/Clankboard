                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Glyph="&#xE753;" HorizontalAlignment="Center"/>


                        </Grid>
                    </ListViewItem>
                    <ListViewItem Background="#303030" CornerRadius="5" Height="50" BorderBrush="#414141" BorderThickness="1">
