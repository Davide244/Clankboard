                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Glyph="&#xE753;" HorizontalAlignment="Center"/>
                        </Grid>
                    </ListViewItem>
                </ListView>
            </ScrollViewer>
        </Grid>

