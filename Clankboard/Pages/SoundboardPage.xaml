<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Clankboard.SoundboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Clankboard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Grid VerticalAlignment="Stretch">
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Stretch" Spacing="{StaticResource SettingsCardSpacing}" Margin="18, 10, 18, 0">
                <controls:SettingsExpander Description="Simple playback settings."
                           Header="Playback Options"
                           HeaderIcon="{ui:FontIcon Glyph=&#xE768;}">
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard Header="Stack Audio"
                                               Description="Multiple audio files are able to be played at once. This makes them stack."
                                               HeaderIcon="{ui:FontIcon Glyph=&#xE81E;}">
                            <ToggleSwitch IsOn="False" />
                        </controls:SettingsCard>
                        <controls:SettingsCard Header="Stop Keybind"
                                               Description="Keybinds that stops all sounds."
                                               HeaderIcon="{ui:FontIcon Glyph=&#xE73B;}">
                            <!--ToggleSwitch IsOn="False" /-->
                            <Button Content="TEST" Click="StopAllSounds_Click"/>
                        </controls:SettingsCard>
                        <controls:SettingsCard Header="Local Output Volume"
                                               Description="At which volume to output the soundboard audio to you locally."
                                               HeaderIcon="{ui:FontIcon Glyph=&#xF0EE;}">
                            <Slider Minimum="0" Maximum="300" Value="100"/>
                        </controls:SettingsCard>
                        <controls:SettingsCard Header="Audio Cable Output Volume"
                                               Description="At which volume to output the soundboard audio to your virtual audio cable."
                                               HeaderIcon="{ui:FontIcon Glyph=&#xE767;}">
                            <Slider Minimum="0" Maximum="300" Value="100"/>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                    <controls:SettingsExpander.ItemsHeader>
                        <muxc:InfoBar Title="Find more options on the"
                              BorderThickness="0"
                              CornerRadius="0"
                              IsIconVisible="True"
                              IsOpen="True"
                              Severity="Informational"
                              IsClosable="False">
                            <muxc:InfoBar.ActionButton>
                                <HyperlinkButton Content="Settings Page" Click="LocalSettingsButton_Click"/>
                            </muxc:InfoBar.ActionButton>
                        </muxc:InfoBar>
                    </controls:SettingsExpander.ItemsHeader>

                </controls:SettingsExpander>
            </StackPanel>
            
            <Grid Margin="10, 10, 10, 0" Background="{ThemeResource Clankboard_AppCardBackground}" Padding="4" CornerRadius="5" VerticalAlignment="Stretch" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Margin="0, 0, 0, 13" VerticalAlignment="Stretch">
                    <TextBox Margin="2, 2, 2, -7" PlaceholderText="Search Sound" Visibility="Visible"/>
                    <StackPanel Visibility="Visible" x:Name="SoundboardNoItems" VerticalAlignment="Center">
                        <BitmapIcon UriSource="ms-appx:///Assets/NoSoundboardItems.png" ShowAsMonochrome="True" Opacity="0.8" HorizontalAlignment="Center" Width="200"/>
                        <TextBlock Text="Soundboard empty." FontSize="30" FontWeight="Bold" Opacity="0.8" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Visible" Visibility="Collapsed" x:Name="MainSoundboardListViewScroll">
                    <ListView x:Name="MainSoundboardListview" SelectionMode="Extended" CanDragItems="True" Margin="-3, 0" CanReorderItems="True" ContainerContentChanging="MainSoundboardListview_ContainerContentChanging">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:SoundBoardItem">
                                <Grid>
                                    <Grid.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Text="Change Name">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE70F;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem Text="Delete" Click="Soundboard_Removeitem_Click" IsEnabled="{x:Bind DeleteBtnEnabled, Mode=TwoWay}">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE74D;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem Text="Play" IsEnabled="{x:Bind BtnEnabled, Mode=TwoWay}">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE768;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Glyph="{x:Bind SoundLocationIcon, Mode=TwoWay}" x:Phase="1" HorizontalAlignment="Left" Foreground="{Binding SoundIconColor, Mode=TwoWay, TargetNullValue={ThemeResource TextFillColorPrimaryBrush}}" ToolTipService.ToolTip="{x:Bind SoundIconTooltip, Mode=TwoWay}" Visibility="{x:Bind SoundIconVisible, Mode=TwoWay}"/>
                                    <ProgressRing IsActive="{x:Bind ProgressRingEnabled, Mode=TwoWay}" x:Phase="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="20" Height="20" IsIndeterminate="{x:Bind ProgressRingIntermediate, Mode=TwoWay}" Value="{x:Bind ProgressRingProgress, Mode=TwoWay}"/>
                                    <StackPanel Margin="20 0, 0, 0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Text="{x:Bind SoundName, Mode=TwoWay}"
                                                x:Phase="1"
                                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                TextWrapping="NoWrap"
                                                Margin="12,6,0,0"/>
                                        </StackPanel>
                                        <TextBlock 
                                            Grid.Row="1"
                                            Text="{x:Bind SoundLocation, Mode=TwoWay}"
                                            x:Phase="1"
                                            Style="{ThemeResource CaptionTextBlockStyle}"
                                            TextWrapping="NoWrap"
                                            Margin="12,0,0,8"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                                        <HyperlinkButton Margin="0, 0, 5, 0" Foreground="{Binding SoundKeybindForecolor, Mode=TwoWay, TargetNullValue={ThemeResource AccentTextFillColorPrimaryBrush}}" x:Phase="1" Content="{x:Bind SoundKeybind, Mode=TwoWay, TargetNullValue='None'}" Click="Soundboard_ChangeItemKeybind_Click"/>
                                        <!-- Double Keybind color (No Overlap mode): Foreground="#ff99a4"-->
                                        <Button Foreground="LightGreen" HorizontalAlignment="Right" VerticalAlignment="Center" x:Phase="1" IsEnabled="{x:Bind BtnEnabled, Mode=TwoWay}" Click="Soundboard_PlayItem_Click">
                                            <FontIcon Glyph="&#xF5B0;" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
            <!--StackPanel Grid.Row="2" x:Name="InfobarHolder">
                <InfoBar x:Name="AppMissingDriverInfo" Title="Missing Drivers" Message="You do not have any supported drivers installed!" Severity="Error" IsOpen="False" Margin="10, 10, 10, 0" VerticalAlignment="Bottom"/>
                <InfoBar x:Name="AppSecondaryInfobar" Title="Missing Files" Message="Some files are missing!" Severity="Warning" IsOpen="False" Margin="10, 10, 10, 10" VerticalAlignment="Bottom"/>
            </StackPanel-->
        </Grid>
    </Grid>
</Page>
